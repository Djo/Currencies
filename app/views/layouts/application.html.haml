!!!
%html

  %head
    %title
      = yield(:title) || "Currencies"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag :all, :cache => true, :recursive => true
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      #navigation
        = link_to 'Currencies', currencies_path, :class => currency_pages_class
        = link_to 'Trips', trips_path, :class => trip_pages_class

      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)

      = yield
