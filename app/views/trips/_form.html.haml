= form_for trip do |form|
  = form.error_messages
  %p
    = form.label :completed_at, 'Date'
    %br
    = form.text_field :completed_at, :class => 'date'
  %p
    = form.label :description
    %br
    = form.text_area :description, :size => '50x5'

  - if countries.any?
    = render 'trips/form/countries', :countries => countries, :country_ids => country_ids

  .buttons
    = link_to 'Back', trips_path
    = form.submit 'Save'
